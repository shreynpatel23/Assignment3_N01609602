@model Assignment3_N01609602.Models.Teacher
@{
    ViewBag.Title = "Teacher Details";
}

<a href="/Teachers/List">Back</a>
<div class="card mt-4 w-50">
    <div class="card-body">
        <h5 class="card-title">@Model.firstName @Model.lastName</h5>
        <h6 class="card-subtitle mb-2 text-muted">Employee number: @Model.employeeNumber</h6>
        <hr />
        <p class="card-text">
            @Model.firstName is a teacher that was hired on @Model.hireDate . The Salary for the teacher is $@Model.salary
        </p>
        <a href="/Teachers/Classes/@Model.id" class="btn btn-sm btn-primary mt-2">View Classes</a>
    </div>
</div>