@model IEnumerable<Assignment3_N01609602.Models.Classes>
@{
    ViewBag.Title = "Classes List";
}

<h3>Students List</h3>
<hr />
<div class="d-flex flex-wrap align-items-start mt-3">
    @foreach (var studentClass in Model)
    {
        <div class="card m-1" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@studentClass.className</h5>
                <h6 class="card-subtitle mb-2 text-muted">@studentClass.classCode</h6>
                <p class="card-text">
                    this class is with <strong>@studentClass.teacherFirstName @studentClass.teacherLastName</strong>
                    began on <strong>@studentClass.startDate</strong> and concludes on<strong> @studentClass.endDate </strong>.
                    The dedicated instructor, <strong> @studentClass.teacherFirstName</strong> ,
                    ensures a dynamic and engaging learning environment.
                </p>
            </div>
        </div>
    }
</div>