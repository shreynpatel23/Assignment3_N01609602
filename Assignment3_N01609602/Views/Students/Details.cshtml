@model Assignment3_N01609602.Models.Student
@{
    ViewBag.Title = "Student Details";
}

<a href="/Students/List">Back</a>
<div class="card mt-4 w-50">
    <div class="card-body">
        <h5 class="card-title">@Model.firstName @Model.lastName</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.studentNumber enrolled on @Model.enrolDate</h6>
        <a href="/Students/Courses/@Model.id" class="btn btn-sm btn-primary mt-2">View Courses</a>
    </div>
</div>

